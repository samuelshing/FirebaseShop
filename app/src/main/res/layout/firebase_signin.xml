<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <com.firebase.ui.auth.util.ui.SupportVectorDrawablesButton
            style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
            android:id="@+id/sign_in_with_email"
            android:text="@string/fui_sign_in_with_email"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.firebase.ui.auth.util.ui.SupportVectorDrawablesButton
            style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
            android:id="@+id/sign_in_with_google"
            android:text="@string/fui_sign_in_with_google"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_with_email"/>

    <com.firebase.ui.auth.util.ui.SupportVectorDrawablesButton
            style="@style/FirebaseUI.Button.AccountChooser.FacebookButton"
            android:id="@+id/sign_in_with_facebook"
            android:text="@string/fui_sign_in_with_facebook"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_with_google"/>

    <com.firebase.ui.auth.util.ui.SupportVectorDrawablesButton
            style="@style/FirebaseUI.Button.AccountChooser.PhoneButton"
            android:id="@+id/sign_in_with_phone"
            android:text="@string/fui_sign_in_with_phone_number"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_with_facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>